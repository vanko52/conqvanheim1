generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  username   String      @unique
  password   String
  power      Int         @default(0)
  lastPullAt DateTime?
  inventory  Inventory[]
}

model Rune {
  id        Int         @id @default(autoincrement())
  stat      String
  rarity    String
  value     Int
  inventory Inventory[]
}

model Inventory {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int
  rune   Rune @relation(fields: [runeId], references: [id])
  runeId Int
}
